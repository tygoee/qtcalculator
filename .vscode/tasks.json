{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "prepare",
            "type": "shell",
            "command": "cmake",
            "args": [
                "${workspaceFolder}/src",
                "-DCMAKE_PREFIX_PATH=~/Qt/6.6.1/gcc_64",
                "-DCMAKE_BUILD_TYPE=Debug",
                "-DCMAKE_CXX_FLAGS=-g",
                "-B",
                "${workspaceFolder}/build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build",
            "type": "shell",
            "command": "~/Qt/Tools/CMake/bin/cmake",
            "args": [
                "--build",
                "${workspaceFolder}/build",
                "--target",
                "all"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "pre-launch",
            "dependsOrder": "sequence",
            "dependsOn": [
                "prepare",
                "build"
            ]
        }
    ]
}